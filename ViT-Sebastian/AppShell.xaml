<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ViT_Sebastian.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ViT_Sebastian"
    xmlns:views="clr-namespace:ViT_Sebastian.MVVM.Views"
    Shell.FlyoutBehavior="Disabled"
    Title=" V.I.T - S.E.B.A.S.T.I.A.N">

    <ShellItem Route="LoginView"  FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate views:LoginView}"/>
    </ShellItem>
    
    <TabBar>
        <Tab Title="Охват" Icon="task.png" Route="CoverageView">
            <ShellContent  ContentTemplate="{DataTemplate views:CoverageView}" />
        </Tab>
        <Tab Title="Расписание" Icon="shift.png" Route="ScheduleView" >
            <ShellContent ContentTemplate="{DataTemplate views:ScheduleView}"/>
        </Tab>
        <Tab Title="Информация"  Icon="about.png" Route="AboutView">
            <ShellContent ContentTemplate="{DataTemplate views:AboutView}"/>
        </Tab>
    </TabBar>

</Shell>
