<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViT_Sebastian.MVVM.Views.LoginView"
             Title="LoginView"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto" BackgroundColor="{StaticResource Primary}">
        <VerticalStackLayout>
            <Image Margin="30,50,30,30" WidthRequest="300" HorizontalOptions="Center" Source="vitlog.png"/>
            <Label TextColor="{StaticResource SemiWhite}" FontAttributes="Bold" FontSize="48" HorizontalOptions="Center" Text="V.I.T"/>
            <Label TextColor="{StaticResource SemiWhite}" FontSize="40" HorizontalOptions="Center" Text="S.E.B.A.S.T.I.A.N"/>
        </VerticalStackLayout>
        <Frame CornerRadius="50"  Margin="40" Grid.Row="1">
            <VerticalStackLayout Spacing="5">

                <StackLayout Margin="10,0,10,0" Orientation="Horizontal">
                    <Frame BackgroundColor="{StaticResource Secondary}" Padding="10" ZIndex="1" HasShadow="True" BorderColor="{StaticResource SemiWhite}" HeightRequest="56" WidthRequest="56" CornerRadius="28">
                        <Image Source="login.png"/>
                    </Frame>
                    <Frame BorderColor="White" HeightRequest="45" Margin="-20,0,0,0" Padding="0"  HorizontalOptions="FillAndExpand">
                        <Entry FontSize="Body" Margin="25,0,10,0" VerticalOptions="Center" Placeholder="  Табельный номер" Keyboard="Numeric"/>
                    </Frame>
                </StackLayout>
                <StackLayout Margin="10,20,10,0" Orientation="Horizontal">
                    <Frame BackgroundColor="{StaticResource Secondary}" Padding="15" ZIndex="1" HasShadow="True" BorderColor="{StaticResource SemiWhite}" HeightRequest="56" WidthRequest="56" CornerRadius="28">
                        <Image Source="pass.png"/>
                    </Frame>
                    <Frame  HeightRequest="45" Margin="-20,0,0,0" Padding="0"  BorderColor="White" HorizontalOptions="FillAndExpand">
                        <Entry IsPassword="True" FontSize="Body" Margin="25,0,10,0" VerticalOptions="Center" Placeholder="  Пароль" Keyboard="Text"/>
                    </Frame>
                </StackLayout>
                <BoxView HeightRequest="2" Color="{StaticResource Gray200}" Margin="5,15,5,0"/>
                <Button Clicked="Button_Clicked" Margin="30,20,30,5" Text="Войти" TextColor="{StaticResource SemiWhite}" FontAttributes="Bold" FontSize="20"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>